# ConsensusNet Configuration
# Copy this file to .env and fill in your API keys

# LLM Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Evidence Sources
NEWSAPI_KEY=your_newsapi_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# Database
DATABASE_URL=postgresql://user:password@localhost/consensusnet

# Redis
REDIS_URL=redis://localhost:6379

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Settings
CACHE_TTL_WIKIPEDIA=86400  # 24 hours
CACHE_TTL_PUBMED=604800    # 7 days
CACHE_TTL_ARXIV=604800     # 7 days
CACHE_TTL_NEWS=3600        # 1 hour
CACHE_TTL_GOOGLE=3600      # 1 hour

# Cost Optimization
DAILY_BUDGET_USD=10.00
ENABLE_COST_TRACKING=true

# Adaptive Credibility Settings
CREDIBILITY_UPDATE_THRESHOLD=10  # Update after N uses
CREDIBILITY_ESCALATION_THRESHOLD=0.65
CONSENSUS_THRESHOLD=0.75
